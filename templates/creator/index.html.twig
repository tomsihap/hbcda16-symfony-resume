{% extends 'base.html.twig' %}

{% block title %}Creator index{% endblock %}

{% block body %}
    <h1>Creator index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>FullName</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for creator in creators %}
            <tr>
                <td>{{ creator.id }}</td>
                <td>{{ creator.fullName }}</td>
                <td>
                    <a href="{{ path('creator_show', {'id': creator.id}) }}">show</a>
                    <a href="{{ path('creator_edit', {'id': creator.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('creator_new') }}">Create new</a>
{% endblock %}
